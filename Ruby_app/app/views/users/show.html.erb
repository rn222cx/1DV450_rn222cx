<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
    </section>
  </aside>
</div>
<#%= @stories.title %>

<% @stories.each do |story| %>
  <h2><%= link_to story.title, story %></h2>
  <p><%= link_to "Edit", edit_story_path(story) %> |
     <%= link_to "Delete", story, :data => {:confirm => "Are you sure?"}, :method => :delete %>
  </p>
<% end %>

<%= link_to "create new story", new_story_path %>